<%= render 'layouts/menu' %>

<h1>Register</h1>

<%= form_tag create_customer_path do %>
  <table>
    <tr>
      <td>
        <label for="name">Name:</label>
        <input name="name" type="text" required/></br>
      </td>
    </tr>

    <tr>
      <td>
        <label for="password">Password:</label>
        <input name="password" type="password" required/>
      </td>
    </tr>

    <tr>
      <td>
        <label for="confirm">Confirm:</label>
        <input name="confirm" type="password" required/>
      </td>
    </tr>

    <tr>
      <td>
        <label for="email">Email:</label>
        <input name="email" type="email" required/>
      </td>
    </tr>

    <tr>
      <td>
        <label for="address">Address:</label>
        <input name="address" type="text" required/></br>
      </td>
    </tr>

    <tr>
      <td>
        <label for="city">City:</label>
        <input name="city" type="text" required/></br>
      </td>
    </tr>

    <tr>
      <td>
        <label for="province">Province:</label>
        <select name="province">
          <%= @provinces.each do |province| %>
            <option value='<%= province.id %>'><%= province.name %></option>
          <% end %>
        </select>
      </td>
    </tr>

    <tr>
      <td>
        <label for="postal_code">Postal Code:</label>
        <input name="postal_code" type="text" pattern="[ABCEGHJKLMNPRSTVXY][0-9][ABCEGHJKLMNPRSTVWXYZ][0-9][ABCEGHJKLMNPRSTVWXYZ][0-9]" name="postal_code" required/>
      </td>
    </tr>
  </table>
  <button type="submit">Register</button>
<% end %>
