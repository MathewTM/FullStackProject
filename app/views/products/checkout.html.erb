<%= render 'layouts/menu' %>

<h1>Order Information</h1>

<%= form_tag payment_path  do%>
  <table>
    <tr>
      <th>
        <label for="name">Name:</label>
        <input name="name" type="text" required/></br>
      </th>
    </tr>

    <tr>
      <th>
        <label for="email">Email:</label>
        <input name="email" type="email" required/>
      </th>
    </tr>

    <tr>
      <th>
        <label for="address">Address:</label>
        <input name="address" type="text" required/></br>
      </th>
    </tr>

    <tr>
      <th>
        <label for="city">City:</label>
        <input name="city" type="text" required/></br>
      </th>
    </tr>

    <tr>
      <th>
        <label for="province">Province:</label>
        <select name="province">
          <%= @provinces.each do |province| %>
            <option value='<%= province.code %>'><%= province.name %></option>
          <% end %>
        </select>
      </th>
    </tr>

    <tr>
      <th>
        <label for="postal_code">Postal Code:</label>
        <input name="postal_code" type="text" pattern="[ABCEGHJKLMNPRSTVXY][0-9][ABCEGHJKLMNPRSTVWXYZ][0-9][ABCEGHJKLMNPRSTVWXYZ][0-9]" name="postal_code" required/>
      </th>
    </tr>
  </table>
  <button type="submit">Next</button>
<% end %>
